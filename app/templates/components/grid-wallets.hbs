<div class="row">
  <div class="col-md-8">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Balance</th>
        </tr>
      </thead>
      <tbody>
        {{#each wallets as |wallet|}}
        <tr>
          <td>{{wallet.id}}</td>
          <td>{{wallet.name}}</td>
          <td>{{wallet.balance}}</td>
          <td>
            {{#link-to "wallets.edit" wallet.id classNames="btn btn-primary"}}Edit{{/link-to}}
            <button type="submit" class="btn btn-danger" {{action "delete" wallet.id}}>Delete</button>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
{{yield}}
