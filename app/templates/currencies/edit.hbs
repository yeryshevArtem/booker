{{#modal-window model=model save="edit" close="back" title="Edit currency"}}
  <div class="row">
    <div class="col-md-4">
      <br>
      <form>
        <div class="form-group">
          {{input type="text" value=model.name classNames="form-control" placeholder="Currency name"}}
        </div>
        <div class="form-group">
          {{input type="text" value=model.icon classNames="form-control" placeholder="Icon"}}
        </div>
      </form>
    </div>
  </div>
{{/modal-window}}
