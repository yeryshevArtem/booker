{{#modal-window model=model save="save" close="back" title="Create currency"}}
  <div class="row">
    <div class="col-md-4">
      <br>
      <form>
        {{#input-wrapper for="name" model=model}}
          {{input type="text" value=model.name classNames="form-control" placeholder="Currency name"}}
        {{/input-wrapper}}
        {{#input-wrapper for="icon" model=model}}
          {{input type="text" value=model.icon classNames="form-control" placeholder="Icon"}}
        {{/input-wrapper}}
      </form>
    </div>
  </div>
{{/modal-window}}
