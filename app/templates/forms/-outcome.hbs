<form>
  {{#input-wrapper for="name" model=model}}
    {{input
      type="text"
      value=model.name
      classNames="form-control
      outcome-name"
      placeholder="Outcome name"}}
  {{/input-wrapper}}
  {{#input-wrapper for="amount" model=model}}
    {{input
      type="text"
      value=model.amount
      classNames="form-control
      outcome-amount"
      placeholder="Amount"}}
  {{/input-wrapper}}
  <div class="form-group">
  <select class="form-control">
    {{#each categories as |category|}}
    <option>{{category.name}}</option>
    {{/each}}
  </select>
  </div>
  <div class="form-group">
  <select class="form-control">
    {{#each wallets as |wallet|}}
    <option>{{wallet.name}}</option>
    {{/each}}
  </select>
</div>
</form>
