{{#link-to "incomes.new" classNames="btn btn-info"}}Add income{{/link-to}}
<div class="row">
  <div class="col-md-8">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Amount</th>
          <th>Category</th>
          <th>Wallet</th>
        </tr>
      </thead>
      <tbody>
        {{#each model as |income|}}
        <tr>
          <td>{{income.id}}</td>
          <td>{{income.name}}</td>
          <td>{{income.amount}}</td>
          <td>{{income.category.name}}</td>
          <td>{{income.wallet.name}}</td>
          <td>
            {{#link-to "incomes.edit" income.id classNames="btn btn-primary"}}Edit{{/link-to}}
            <button class="btn btn-danger" {{action "delete" income}}>Delete</button>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
