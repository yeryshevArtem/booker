{{#modal-window model=model save="create" close="back" title="Add outcome"}}
  <div class="row">
    <div class="col-md-4">
      <br>
      <form>
        <div class="form-group">
          {{input type="text" value=model.name classNames="form-control" placeholder="Outcome name"}}
        </div>
        <div class="form-group">
          {{input type="text" value=model.amount classNames="form-control" placeholder="Amount"}}
        </div>
        <div class="form-group">
        <select class="form-control">
          {{#each categories as |category|}}
          <option>{{category.name}}</option>
          {{/each}}
        </select>
        </div>
        <div class="form-group">
        <select class="form-control">
          {{#each wallets as |wallet|}}
          <option>{{wallet.name}}</option>
          {{/each}}
        </select>
      </div>
      </form>
    </div>
  </div>
{{/modal-window}}
