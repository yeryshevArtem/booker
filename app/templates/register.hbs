<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h3 class="text-center">Register</h3>
      <br>
      <form>
        <div class="form-group">
          {{input type="text" value=nickName classNames="form-control" placeholder="Nick name"}}
        </div>
        <div class="form-group">
          {{input type="email" value=email classNames="form-control" placeholder="Email"}}
        </div>
        <div class="form-group">
          {{input type="password" value=password classNames="form-control" placeholder="Password"}}
        </div>
        <div class="form-group">
          {{input type="password" value=repeatedPassword classNames="form-control" placeholder="Repeat your password"}}
        </div>
        <p>
          <button type="submit" class="btn btn-primary" {{action "register" nickName email password repeatedPassword}}>Register</button>
        </p>
      </form>
    </div>
  </div>
</div>
