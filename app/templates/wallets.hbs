{{#link-to "wallets.new" classNames="btn btn-info new-wallet"}}Create a new wallet{{/link-to}}
<div class="row">
  <div class="col-md-8">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Balance</th>
        </tr>
      </thead>
      <tbody>
        {{#each model as |wallet|}}
        <tr>
          <td>{{wallet.id}}</td>
          <td>{{wallet.name}}</td>
          <td>{{wallet.balance}}</td>
          <td>
            {{#link-to "wallets.edit" wallet.id classNames="btn btn-primary" class="primary"}}Edit{{/link-to}}
            <button class="btn btn-danger delete-item" {{action "openDialog" wallet}}>Delete</button>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
{{#if isModalDialogActive}}
  {{modal-window
    model=model
    delete="delete"
    close="closeDialog"
    title="Delete income"
    isDeleteConfirm=true}}
{{/if}}
