<div class="row">
  <div class="col-md-4">
    <br>
    <form>
      <div class="form-group">
        {{input type="text" value=model.name classNames="form-control" placeholder="Wallet name"}}
      </div>
      <div class="form-group">
        {{input type="text" value=model.balance classNames="form-control" placeholder="Balance"}}
      </div>
      <p>
        <button type="submit" class="btn btn-primary" {{action "create" model}}>Create</button>
        {{#link-to "wallets" classNames="btn btn-default"}}Cancel{{/link-to}}
      </p>
    </form>
  </div>
</div>
